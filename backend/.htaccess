RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# API Routes
RewriteRule ^api/books/featured$ api/books.php [QSA,L]
RewriteRule ^api/books/(\d+)$ api/book.php [QSA,L]
RewriteRule ^api/books$ api/books.php [QSA,L]
RewriteRule ^api/categories$ api/categories.php [QSA,L]
RewriteRule ^api/contact$ api/contact.php [QSA,L]

# CORS Headers
Header set Access-Control-Allow-Origin "*"
Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header set Access-Control-Allow-Headers "Content-Type"